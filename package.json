{
  "name": "hello-cli",
  "version": "0.0.1",
  "description": "A basic CLI written in TypeScript meant to be used as an example or project starter",
  "type": "module",
  "main": "./build/cli.js",
  "bin": "./build/cli.js",
  "scripts": {
    "prebuild": "rm -rf ./build",
    "build": "swc --config-file .swcrc -D src -d build",
    "build:debug": "swc --config-file .swcrc -s true -D src -d build",
    "postbuild": "chmod +x ./build/cli.js",
    "clean": "rm -rf ./node_modules ./build; rm package-lock.json; echo 'cleared project artifacts!'",
    "format": "prettier --write ./src",
    "test": "jest",
    "test:cov": "jest --collect-coverage"
  },
  "keywords": [
    "typescript",
    "cli",
    "starter project"
  ],
  "author": "Tiberius Silivestru <tiberius.silivestru@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^28.1.3",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.220",
    "@swc/jest": "^0.2.22",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.3",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "commander": "^9.4.0"
  }
}
